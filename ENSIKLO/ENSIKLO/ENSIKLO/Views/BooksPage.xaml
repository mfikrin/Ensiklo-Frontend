<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ENSIKLO.Views.BooksPage"
             xmlns:model="clr-namespace:ENSIKLO.Models"
             xmlns:local="clr-namespace:ENSIKLO.ViewModels"
             x:Name="BrowseBooksPage">

    <ContentPage.Content>
        <ScrollView Orientation="Vertical">

        <StackLayout BackgroundColor="WhiteSmoke">
            
            <Label Text="Have you read a book today?" TextColor="#009BF0" Margin="15" FontSize="20"/>
            <Frame CornerRadius="20" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Start"
                       HasShadow="True"
                       IsClippedToBounds="True"
                       BackgroundColor="#009BF0"
                       Margin="10"
                       Padding="0"
                    >
                
                <StackLayout
                        Margin="10"
                        HeightRequest="230">
                    
                    <StackLayout Margin="8" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                        <Label Text="Newest Arrival!" FontSize="17" FontAttributes="Bold"/>
                        <Label HorizontalOptions="EndAndExpand" Text="View all new Arrival" FontSize="17">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding AllNewArrivalCommand}"
                                    />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>



                    <RefreshView x:DataType="local:BookViewModel" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">


                        <CollectionView 
                                ItemsSource="{Binding BooksTop}" 
                                Margin="10"
                                x:Name="ItemsListViewUp" 
                                SelectionMode="Single"
                                SelectedItem="{Binding SelectedBook}"
                                EmptyView="No data Available"
                                >
                                
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Horizontal" Span="1" HorizontalItemSpacing="6"/>
                            </CollectionView.ItemsLayout>

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    
                                    <Frame CornerRadius="12" 
                                           HorizontalOptions="Center" 
                                           VerticalOptions="Start"
                                           HasShadow="True"
                                           BackgroundColor="White"
                                           BorderColor="Gray"         
                                           IsClippedToBounds="True"
                                           Padding="0">

                                        <Grid x:DataType="model:Book" >

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height=".5*" />
                                                <RowDefinition Height="1*" />
                                            </Grid.RowDefinitions>

                                               
                                                    <Image Source="{Binding Url_cover}"
                                                           Grid.Row="0"
                                                           Aspect="AspectFill" 
                                                           WidthRequest="100"
                                                           HeightRequest="100"
                                                           />
                                                

                                                <StackLayout Grid.Row="1">

                                                <Label Grid.Column="1"
                                                       HorizontalOptions="CenterAndExpand"
                                                       TextColor="Black"
                                                       Text="{Binding Title}"
                                                       FontAttributes="Bold"
                                                      />


                                                <Label Text="{Binding Author}"
                                                        Grid.Row="1"
                                                        Grid.Column="1"
                                                        HorizontalOptions="CenterAndExpand"
                                                        TextColor="Black"
                                                        FontAttributes="Italic"
                                                        />
                                            </StackLayout>

                                        </Grid>


                                    </Frame>

                                </DataTemplate>

                            </CollectionView.ItemTemplate>
                        </CollectionView>

                    </RefreshView>
                </StackLayout>
            </Frame>

                <Frame CornerRadius="20" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Start"
                       HasShadow="True"
                       IsClippedToBounds="True"
                       BackgroundColor="#009BF0"
                       Margin="10"
                       Padding="0"
                    >

                    <StackLayout
                        Margin="10"
                        HeightRequest="230">

                        <StackLayout Margin="8" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                            <Label Text="You might like these" FontAttributes="Bold" FontSize="17"/>
                            <Label HorizontalOptions="EndAndExpand" Text="Refresh Suggestion" FontSize="17">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer 
                                    Command="{Binding RefreshCommand}"
                                    />
                                </Label.GestureRecognizers>
                            </Label>

                            <ImageButton Source="Assets/refresh.png"
                                    HorizontalOptions="End"
                                    WidthRequest="10"
                                    HeightRequest="16" 
                                    
                                    BorderColor="Black"
                                    Command="{Binding RefreshCommand}"
                                    
                                  />
                        </StackLayout>

                        <RefreshView x:DataType="local:BookViewModel"   IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
                    <CollectionView 
                            ItemsSource="{Binding BooksBottom}" 
                            x:Name="ItemsListView" 
                            SelectionMode="Single"
                            HeightRequest="100"
                            SelectedItem="{Binding SelectedBook}"
                            Margin="10"
                            >
                        <CollectionView.EmptyView>

                            <StackLayout>
                                <Label Text="No data Available" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"></Label>
                            </StackLayout>
                            

                        </CollectionView.EmptyView>
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical" Span="6" HorizontalItemSpacing="4" VerticalItemSpacing="4"/>
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame CornerRadius="12" 
                                           HorizontalOptions="Center" 
                                           VerticalOptions="Start"
                                           HasShadow="True"
                                           BackgroundColor="White"
                                           BorderColor="Gray"         
                                           IsClippedToBounds="True"
                                           Padding="0">
                                <Grid Padding="8" Margin="4" x:DataType="model:Book" BackgroundColor="White">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="3*" />
                                        
                                        <RowDefinition Height="1*" />
                                    </Grid.RowDefinitions>

                                    <Image Source="{Binding Url_cover}"
                                                       Grid.Row="0"
                                                       Aspect="AspectFit" 
                                                       WidthRequest="30"
                                                       HeightRequest="100"
                                                       />


                                    <StackLayout Grid.Row="1">
                                        <Label Grid.Column="1"
                                                           VerticalOptions="Center"
                                                           Text="{Binding Title}"
                                                           FontAttributes="Bold"
                                                           TextColor="Black"    
                                                           />



                                        <Label Text="{Binding Author}"
                                                            Grid.Row="1"
                                                            Grid.Column="1"
                                                            VerticalOptions="Start"
                                                            FontAttributes="Italic"
                                                            TextColor="Black"
                                                            />



                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                    NumberOfTapsRequired="1"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:BookViewModel}}, Path=BookTapped}"		
                                                    CommandParameter="{Binding .}">
                                            </TapGestureRecognizer>
                                        </StackLayout.GestureRecognizers>

                                    </StackLayout>

                                </Grid>
                            </Frame>

                        </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </RefreshView>
                    </StackLayout>
                </Frame>



            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
